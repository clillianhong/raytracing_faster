<!-- 
Test scene with a single sphere
RGB encoding of XYZ components of the surface normals
(This file is generated by make_scenes.py. Edit and re-run
that script rather than editing this file.)
  -->
<scene>

  <camera type="PerspectiveCamera">
    <viewPoint>2.5 2 1.5</viewPoint>
    <viewDir>-2.5 -2 -1.5</viewDir>
    <viewUp>0 1 0</viewUp>
    <projDistance>5</projDistance>
    <viewWidth>5</viewWidth>
    <viewHeight>5</viewHeight>
  </camera>
  <image>
    300 300
  </image>

  <shader name="xyz2rgb" type="RGBNormals"></shader>

  <surface type="Sphere">
    <shader ref="xyz2rgb" />
    <center>0 0 0</center>
    <radius>1</radius>
  </surface>
  <light>
    <position>3 4 5</position>
    <intensity>10 10 10</intensity>
  </light>
  <light>
    <position>-10 1 3</position>
    <intensity>10 10 10</intensity>
  </light>
</scene>
