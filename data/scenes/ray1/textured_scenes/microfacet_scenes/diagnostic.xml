<?xml version="1.0" encoding="UTF-8" ?>
<!--  Sphere mesh with Earth texture
 -->
<scene>
  <backColor>0.4 0.6 0.9</backColor>
  <exposure>1</exposure>
  <camera type="PerspectiveCamera">
    <viewPoint>-10 1.5 -4.5</viewPoint>
    <viewDir>1 0 0</viewDir>
    <viewUp>0 1 0</viewUp>
    <projDistance>0.4</projDistance>
    <viewWidth>0.5</viewWidth>
    <viewHeight>0.4</viewHeight>
  </camera>
  <image>
    1000 800
  </image>
  <texture type="RepeatTexture" name="earthTex">
    <image>../../textures/Earth.png</image>
  </texture>
  
  <shader name="norm" type="RGBNormals"></shader>
  
  <shader name="lamb" type="Lambertian"></shader>

  <shader name="Microfacet" type="MicrofacetBeckmann">
    <microfacetColor>0.9 0.7 0.8</microfacetColor>
    <diffuseColor>0.9 0.7 0.8</diffuseColor>
    <nt>1</nt>
    <alpha>0.8</alpha>
  </shader>
  
  <shader name="earth" type="MicrofacetBeckmann">
    <texture ref="earthTex" />
    <microfacetColor>0.1 0.9 0.3</microfacetColor>
    <diffuseColor>0.1 0.9 0.3</diffuseColor>
    <nt>1</nt>
    <alpha>0.8</alpha>
  </shader>
  
  

  <surface type="Mesh">
    <shader ref="norm" />
    <data>../../meshes/ico1.obj</data>
  </surface>
  
  <surface type="Mesh">
    <shader ref="lamb" />
    <data>../../meshes/ico2.obj</data>
  </surface>
  
  <surface type="Mesh">
    <shader ref="Microfacet" />
    <data>../../meshes/ico3.obj</data>
  </surface>
  
  <surface type="Mesh">
    <shader ref="earth" />
    <data>../../meshes/ico4.obj</data>
  </surface>
  
  <surface type="Sphere">
    <shader ref="norm" />
    <center>0 3 0</center>
    <radius>1</radius>
  </surface>
  
  <surface type="Sphere">
    <shader ref="lamb" />
    <center>0 3 -3</center>
    <radius>1</radius>
  </surface>
  
  <surface type="Sphere">
    <shader ref="Microfacet" />
    <center>0 3 -6</center>
    <radius>1</radius>
  </surface>
  
  <surface type="Sphere">
    <shader ref="earth" />
    <center>0 3 -9</center>
    <radius>1</radius>
  </surface>
  
  <surface type="Box">
    <shader ref="lamb" />
    <minPt>3 6 -12</minPt>
    <maxPt>3.1 -3 3 </maxPt>
  </surface>
  
  <surface type="Sphere">
    <center>-1003 1.5 -4.5</center>
    <radius>1</radius>
  </surface>
  
  <surface type="Sphere">
    <center>-24 9 -6</center>
    <radius>1</radius>
  </surface>
  
  
  <light>
  	<position>-8 3 0</position>
  	<intensity>20 0 20</intensity>
  </light>
  
  
  <light>
    <position>-8 3 -3</position>
    <intensity>0 20 20</intensity>
  </light>
  
  <light>
    <position>-8 3 -6</position>
    <intensity>20 20 0</intensity>
  </light>
  
  <light>
    <position>-8 3 -9</position>
    <intensity>20 20 20</intensity>
  </light>
  
</scene>

